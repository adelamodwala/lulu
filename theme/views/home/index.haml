- $home = get_post(get_the_ID())
- $content = $home->post_content
.post.home-page

	.grid-section.grid-group

		.grid-col.col-1-2.about-tile.tile
			.content= $content
			%a.filled-link(href="#{get_permalink(get_page_by_title('About')->ID)}")

		- $args = array('category_name' => 'projects', 'posts_per_page' => 8, 'post_status' => 'publish')
		- $query = new WP_Query($args)

		- if($query->have_posts())
			- while($query->have_posts())
				- $query->the_post()
				- $id = get_the_ID()
				- $image = get_field('gallery')[0]['url']
				.grid-col.col-1-4.project-tile.tile(style="background-image: url('#{$image}');")
					.project-tile-content
						.project-title= get_the_title()
						%a.filled-link(href="#{get_permalink()}")