.project-container
	.left.project-info
		.section-wrapper
			.intro
				%h4= get_the_title()
				%h4= get_field('role')

			.details
				= wpautop(get_the_content())

	.project-slider.wrapper
		.liquid-slider#project-slider
			- $gallery = get_field('gallery')
			// %pre= print_r($gallery)
			- foreach($gallery as $image)
				.slide(style="background-image: url('#{$image['url']}');")

	.clear

:javascript
	(function($) {
		$(document).ready(function() {

			var sliderArgs = {
				autoHeight: false,
				dynamicArrows: true,
				autoSlide: true,
				autoSlideInterval: 5000,
				pauseOnHover: false,
				slideEaseDuration: 600,
				slideEaseFunction: "easeInOutSine",
				swipe: true,
				hoverArrows: false,
				continuous: false
			}

			$("#project-slider").liquidSlider(sliderArgs);

		});
	})(jQuery);